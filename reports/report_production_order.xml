<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_prod_status.paperformat_comandera" model="report.paperformat">
        <field name="name">comandera</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">57</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <!-- <field eval="False" name="header_line"/> -->
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">120</field>
    </record>
    <record id="receipt_production" model="ir.actions.report">
        <field name="name">Comandera Ord. Producci√≥n</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sale_order_prod_status.production_order_templates</field>
        <field name="report_file">sale_order_prod_status.production_order_templates</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Orden Nro - %s' % (object.name)</field>
        <!-- <field name="print_report_name">'Orden de Produccion - %s' % (object.name)</field> -->
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <!-- <field name="binding_model_id" ref="sale.view_order_form"/> -->
        <!-- sale.view_order_form -->
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="sale_order_prod_status.paperformat_comandera"/>
    </record>

    
</odoo>


