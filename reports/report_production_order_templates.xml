<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="production_order_templates">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                
                <t t-call="sale_order_prod_status.report_saleorder_document" t-lang="doc.partner_id.lang"/>

            </t>
        </t>
    </template>
    <template id="report_saleorder_document">
        <t t-call="web.internal_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                <div class="page">
                    <div class="oe_structure"/>
                        <h2 class="mt16" style="font-family:verdana;"> 
                            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                <span t-if="doc.state not in ['draft','sent']">Orden de Producci√≥n # </span>
                                <span t-if="doc.state in ['draft','sent']">Quotation # </span>
                            </t>
                            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                <span>Pro-Forma Invoice # </span>
                            </t>
                            <span t-field="doc.name"/>
                        </h2>
                    <!-- </div> -->
                        <t t-set="address">
                            <strong>CLIENTE: </strong>
                            <div t-field="doc.partner_id"
                                
                                t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}' />
                            <!-- <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p> -->
                        </t>
                        <strong>CLIENTE: </strong>
                         <div t-field="doc.partner_id"
                                
                                t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}' />
                    <strong>Fecha de orden:</strong>
                    <p class="m-0" t-field="doc.date_order"/>
                    <p>******************************************</p>
                    <!-- <span t-field="o.partner_id.name"/> -->
                    <!-- <t t-foreach="doc.order_line" t-as="line"> -->
                    <t t-foreach="doc.order_line" t-as="line">
                        <td name="td_name"><span t-field="line.name"/></td>
                        <p>
                            <td name="td_note">Cantidad: <strong><span t-field="line.product_uom_qty"/></strong></td>
                            <td name="td_name">Alto: <strong><span t-field="line.height"/></strong></td>
                            <td name="td_name">Ancho: <strong><span t-field="line.width"/></strong></td>
                        </p>
                        <p><strong><td name="td_note"><span t-field="line.note"/></td></strong></p>
                        <p>******************************************</p> 
                    </t>
                    

                </div>
             
        </t>
    </template>
</odoo>
